+package ci553.happyshop.utility;
+
+import ci553.happyshop.catalogue.Product;
+import org.junit.jupiter.api.Test;
+
+import java.util.ArrayList;
+import java.util.List;
+
+import static org.junit.jupiter.api.Assertions.*;
+
+class TrolleyUtilsTest {
+
+    @Test
+    void mergeAndSortById_mergesQuantitiesAndSorts() {
+        Product p1 = new Product("0002","B", "b.jpg", 2.0, 10);
+        p1.setOrderedQuantity(1);
+        Product p2 = new Product("0001","A", "a.jpg", 1.0, 10);
+        p2.setOrderedQuantity(2);
+        Product p3 = new Product("0002","B", "b.jpg", 2.0, 10);
+        p3.setOrderedQuantity(3);
+
+        ArrayList<Product> merged = TrolleyUtils.mergeAndSortById(List.of(p1,p2,p3));
+
+        assertEquals(2, merged.size());
+        assertEquals("0001", merged.get(0).getProductId());
+        assertEquals(2, merged.get(0).getOrderedQuantity());
+        assertEquals("0002", merged.get(1).getProductId());
+        assertEquals(4, merged.get(1).getOrderedQuantity());
+    }
+
+    @Test
+    void removeInsufficientById_removesMatchingIds() {
+        Product ok = new Product("0001","A", "a.jpg", 1.0, 10);
+        ok.setOrderedQuantity(1);
+        Product bad = new Product("0002","B", "b.jpg", 2.0, 10);
+        bad.setOrderedQuantity(1);
+
+        Product insufficient = new Product("0002","B", "b.jpg", 2.0, 0);
+        insufficient.setOrderedQuantity(5);
+
+        ArrayList<Product> kept = TrolleyUtils.removeInsufficientById(List.of(ok,bad), List.of(insufficient));
+        assertEquals(1, kept.size());
+        assertEquals("0001", kept.get(0).getProductId());
+    }
+}
