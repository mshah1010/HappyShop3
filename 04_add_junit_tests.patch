+
+    @Test
+    void subtotal_multipliesUnitPriceByOrderedQuantity() {
+        Product p1 = new Product("0001","A", "a.jpg", 1.50, 10);
+        p1.setOrderedQuantity(2);
+        Product p2 = new Product("0002","B", "b.jpg", 2.00, 10);
+        p2.setOrderedQuantity(3);
